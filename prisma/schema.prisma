generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  sku          String?  @unique
  category     String?
  basePrice    Float?
  image        String?
  sourceVendor String?
  sourceUrl    String?
  options      Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
